    <div class="phone-container">
        <div class="phone">
            <div class="button-power"></div> <!-- Botón lateral de encendido -->
            <div class="button-home" id="home-button">🏠</div> <!-- Botón de inicio -->

              <!-- Contenedor del menú con 3 botones -->
            <div class="menu-container" id="menu-container">
                <button class="menu-button" data-url="https://catalogosfuller.blogspot.com/p/fuller-capana-11-2024-mexico-margin.html">Ver catálogo</button>
                <button class="menu-button" data-url="https://catalogosfuller.blogspot.com/p/descarga-automatica-con-alerta-funcion.html">Descargar PDF</button>
                <button class="menu-button" data-url="https://catalogosfuller.blogspot.com/2024/08/menu-de-catalogos-margin-0where.html">Catálogos</button>
               <button class="menu-button" data-url="https://catalogosfuller.blogspot.com/p/body-font-family-arial-sans-serif_29.html">Inicio</button>
            </div>
            <!-- Iframe donde se mostrará el contenido de los botones del menú -->
            <iframe id="web-content" class="web-content"></iframe>
        </div>
    </div>

    <!-- Script para manejar el clic en el botón de inicio y los botones del menú -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const homeButton = document.getElementById('home-button');
            const webContent = document.getElementById('web-content');
            const menuContainer = document.getElementById('menu-container');

            // **Aquí se define la pantalla principal o portada**
            // Al cargar la página, esta URL será tu pantalla principal
            webContent.src = 'https://catalogosfuller.blogspot.com/p/body-font-family-arial-sans-serif_29.html'; // Reemplaza 'tu-pantalla-principal.html' con tu archivo o contenido de portada

            // Alternar el menú al presionar el botón de inicio
            homeButton.addEventListener('click', function() {
                if (menuContainer.style.display === 'flex') {
                    menuContainer.style.display = 'none';
                } else {
                    menuContainer.style.display = 'flex';
                }
            });

            // Cambiar el contenido del iframe al hacer clic en los botones del menú
            const menuButtons = document.querySelectorAll('.menu-button');
            menuButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    const url = this.getAttribute('data-url');
                    webContent.src = url;
                    menuContainer.style.display = 'none'; // Oculta el menú después de seleccionar
                });
            });
        });
    </script>

</body>
